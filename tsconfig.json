{
  "compilerOptions": {
    "target": "ES2021",                                 
    "module": "commonjs", 
    "lib": ["ES2021"],    
    "strict": true,                        
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "skipLibCheck": true ,
    "outDir": "./dist",
    "rootDirs": ["./src", "prisma/zod"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "prisma/**/*"]
}
